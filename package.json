{
  "name": "schoolmaster",
  "version": "1.0.0",
  "description": "SchoolMaster - Learning Management System",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "start:prod": "node backend/dist/index.js",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf backend/dist frontend/dist backend/node_modules frontend/node_modules node_modules",
    "docker:build": "docker build -t schoolmaster .",
    "docker:run": "docker run -p 3000:3000 schoolmaster",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "seed": "cd backend && npm run seed"
  },
  "dependencies": {
    "typescript": "^5.4.5",
    "@types/node": "^20.11.30",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/better-sqlite3": "^7.6.13",
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "express": "^4.19.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "better-sqlite3": "^9.6.0",
    "nanoid": "^5.0.7",
    "multer": "^1.4.5-lts.1",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.24.1",
    "jszip": "^3.10.1",
    "axios": "^1.7.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/jszip": "^3.4.0",
    "@vitejs/plugin-react": "^4.3.1",
    "vite": "^7.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": "18.20.4",
    "npm": "9.8.1"
  }
}
